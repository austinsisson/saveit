.col-md-8.bookmark-category
  - @bookmarks.each_pair do |topic, bookmarks|
    .col-md-12.topic
      %br
      %br
      %br
      = link_to "#{topic}", bookmark_path(topic), class: 'btn btn-default'
      %br
      %br
      %br
    - bookmarks.each do |bookmark|
      .col-md-6.bookmark.text-center
        %h4
          = link_to "#{bookmark.title}", url_fixer(bookmark.url), class: 'livepreview'
          = default_favicon(bookmark)
        %p 
          "#{bookmark.description}"
        - if bookmark.user != current_user
          = link_to like_bookmark_path(bookmark), method: :post, class: 'btn btn-default' do
            %i.fa.fa-heart
        - if policy(bookmark).destroy?
          = link_to "Delete", bookmark_path(bookmark), method: :delete, class: 'btn btn-danger'
        
.col-md-offset-6.preview-window
  %h4.text-center
    Live Preview
  .thumbnail
    = holder_tag '300x240', 'Hover over link for preview!', 'sky', id: 'holder'