.col-md-8.bookmark-category
  - @bookmarks.each_pair do |topic, bookmark|
    .col-md-12.topic
      %br
      %br
      %br
      = "#{topic}"
    %br
    %br
    %br
    - bookmark.each do |link|
      - site = LinkThumbnailer.generate('http://' << link.name)
      - link_path = 'http://' << link.name
      .col-md-6.bookmark.text-center
        %h4
          = link_to "#{site.title}", link_path, class: 'livepreview'
          = image_tag "#{site.favicon}"
        %p 
          "#{site.description}"
        
.col-md-offset-8.preview-window
  %h4.text-center
    Live Preview
  .thumbnail
    = holder_tag '300x240', 'Hover over link for preview!', 'sky', id: 'holder'