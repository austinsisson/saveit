!!!
%html
  %head
    %title SaveIt
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    .container
      .flash
        - if flash[:notice]
          .alert.alert-success
            .button.close{:data => {:dismiss => "alert"} } 
            = flash[:notice]
        - elsif flash[:error]
          .alert.alert-danger
            .button.close{:data => {:dismiss => "alert"} } 
            = flash[:error]
        - elsif flash[:alert]
          .alert.alert-warning
            .button.close{:data => {:dismiss => "alert"} } 
            = flash[:alert]

      - if current_user
        .navbar
          = link_to "About", about_path, class: 'btn btn-primary'
          = link_to "Sign Out", destroy_user_session_path, method: :delete, class: 'btn btn-primary'
          
      = yield
      
